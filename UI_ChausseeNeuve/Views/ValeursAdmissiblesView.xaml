                        <!-- Ligne 2: Type de taux -->
                        <StackPanel Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,10,10">
                            <TextBlock Text="Type de taux"
                                       Style="{StaticResource LabelStyle}"/>
                            <ComboBox ItemsSource="{Binding TypesTauxAccroissement}"
                                      SelectedItem="{Binding TypeTauxAccroissement}"
