                                       Style="{StaticResource InfoTextStyle}"/>
                            <TextBlock Text="â€¢ DÃ©formation verticale: Îµz,adm = Îµz,6 Ã— (N/10^6)^(-1/b) Ã— kc Ã— kr"
                                       Style="{StaticResource InfoTextStyle}"
                                       Margin="0,0,0,15"/>

                            <!-- ParamÃ¨tres -->
                            <TextBlock Text="3. ParamÃ¨tres"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
