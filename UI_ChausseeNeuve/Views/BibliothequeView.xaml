<UserControl x:Class="UI_ChausseeNeuve.Views.BibliothequeView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:local="clr-namespace:UI_ChausseeNeuve.Views"
              xmlns:viewModels="clr-namespace:UI_ChausseeNeuve.ViewModels"
              mc:Ignorable="d"
              d:DesignHeight="530"
              d:DesignWidth="900"
              FontFamily="Segoe UI"
              Background="{StaticResource PrimaryBg}"
              x:Name="Root">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Palette pour les boutons de navigation -->
        <SolidColorBrush x:Key="NavBtnBg" Color="#2B3440"/>
        <SolidColorBrush x:Key="NavBtnBgHover" Color="#344155"/>
        <SolidColorBrush x:Key="NavBtnBgPressed" Color="#212B39"/>
        <SolidColorBrush x:Key="NavBtnBorder" Color="#6B7C93"/>
        <SolidColorBrush x:Key="NavBtnBorderHover" Color="#8CA1BA"/>
        <SolidColorBrush x:Key="NavBtnBorderPressed" Color="#5A6B82"/>
        <SolidColorBrush x:Key="NavBtnSelectedBg" Color="#2563EB"/>
        <SolidColorBrush x:Key="NavBtnSelectedBorder" Color="#93C5FD"/>
        <SolidColorBrush x:Key="NavBtnText" Color="#E5E7EB"/>

        <!-- Bandeau titre (gris) pour la zone 3. MatÃ©riaux -->
        <SolidColorBrush x:Key="HeaderBandBg" Color="#7F7F7F"/>
        <SolidColorBrush x:Key="HeaderBandText" Color="#FFFFFF"/>

        <!-- Style bouton bibliotheque: forme pilule COMPACTE -->
        <Style x:Key="LibOutlineButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource NavBtnText}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#C9D1DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <!-- Supprime l'anneau de focus -->
            <Setter Property="FocusVisualStyle">
                <Setter.Value>
                    <Style TargetType="Control">
                        <Setter Property="Template"><Setter.Value><ControlTemplate TargetType="Control"/></Setter.Value></Setter>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Outer" CornerRadius="16"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"/>
                            <Border x:Name="Inner" CornerRadius="14" Margin="1"
                                    BorderBrush="#66FFFFFF" BorderThickness="1" Background="Transparent"/>
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Outer" Property="BorderBrush" Value="#E5E7EB"/>
                                <Setter TargetName="Inner" Property="BorderBrush" Value="#99FFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Outer" Property="Background" Value="#1AFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Outer" Property="BorderBrush" Value="#D1D5DB"/>
                                <Setter TargetName="Inner" Property="BorderBrush" Value="#80FFFFFF"/>
                                <Setter TargetName="Outer" Property="Background" Value="#26FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Outer" Property="Opacity" Value="0.55"/>
                                <Setter TargetName="Inner" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Bouton d'action principal COMPACTE -->
        <Style x:Key="LibPrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="BorderBrush" Value="#93C5FD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FocusVisualStyle">
                <Setter.Value>
                    <Style TargetType="Control">
                        <Setter Property="Template"><Setter.Value><ControlTemplate TargetType="Control"/></Setter.Value></Setter>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Outer" CornerRadius="16"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"/>
                            <Border x:Name="Inner" CornerRadius="14" Margin="1"
                                    BorderBrush="#66FFFFFF" BorderThickness="1" Background="#14FFFFFF"/>
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Outer" Property="Background" Value="#2E6CF0"/>
                                <Setter TargetName="Outer" Property="BorderBrush" Value="#B3D5FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Outer" Property="Background" Value="#1E54C7"/>
                                <Setter TargetName="Outer" Property="BorderBrush" Value="#7BB7FF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Outer" Property="Opacity" Value="0.55"/>
                                <Setter TargetName="Inner" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styles locaux rÃ©duits pour la bibliothÃ¨que COMPACTS -->
        <Style x:Key="SmallSectionTitle" TargetType="TextBlock" BasedOn="{StaticResource SectionTitleStyle}">
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style x:Key="SmallLabel" TargetType="TextBlock" BasedOn="{StaticResource LabelStyle}">
            <Setter Property="FontSize" Value="10"/>
        </Style>

        <!-- Style gÃ©nÃ©ral utilisÃ© par les boutons de navigation -->
        <Style x:Key="NavPillButton" TargetType="Button" BasedOn="{StaticResource LibOutlineButton}"/>
    </UserControl.Resources>

    <UserControl.DataContext>
        <viewModels:BibliothequeViewModel/>
    </UserControl.DataContext>

    <Grid Background="{StaticResource PrimaryBg}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Left Panel - Ã‰tapes de SÃ©lection RÃ‰DUITE -->
        <Border Grid.Column="0" Style="{StaticResource SectionCardStyle}" Width="200" Margin="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical">
                    <!-- Titre principal COMPACT -->
                    <TextBlock Text="Ã‰TAPES DE SÃ‰LECTION" Style="{StaticResource SmallSectionTitle}" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    <Separator Background="{StaticResource CardBorder}" Margin="0,0,0,12"/>

                    <!-- Section 1: BibliothÃ¨que COMPACTE -->
                    <TextBlock Text="1. BibliothÃ¨que" Style="{StaticResource SmallSectionTitle}" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Vertical" Margin="0,0,0,16">
                        <Button Content="MATERIAUX DU BENIN" Style="{StaticResource NavPillButton}" Command="{Binding SelectLibraryCommand}" CommandParameter="MateriauxBenin" Tag="{Binding IsMateriauxBeninSelected}"/>
                        <Button Content="CATALOGUE SENEGALAIS" Style="{StaticResource NavPillButton}" Command="{Binding SelectLibraryCommand}" CommandParameter="CatalogueSenegalais" Tag="{Binding IsCatalogueSenegalaisSelected}"/>
                        <Button Content="CATALOGUE FRANÃ‡. 1998" Style="{StaticResource NavPillButton}" Command="{Binding SelectLibraryCommand}" CommandParameter="CatalogueFrancais1998" Tag="{Binding IsCatalogueFrancaisSelected}"/>
                        <Button Content="NF P 98-086 2019" Style="{StaticResource NavPillButton}" Command="{Binding SelectLibraryCommand}" CommandParameter="NFP98_086_2019" Tag="{Binding IsNFP98086Selected}"/>
                        <Button Content="MATERIAUX UTILISATEUR" Style="{StaticResource NavPillButton}" Command="{Binding SelectLibraryCommand}" CommandParameter="MateriauxUser" Tag="{Binding IsMateriauxUserSelected}"/>
                    </StackPanel>

                    <Separator Background="{StaticResource CardBorder}" Margin="0,0,0,12"/>

                    <!-- Section 2: CatÃ©gorie COMPACTE -->
                    <TextBlock Text="2. CatÃ©gorie" Style="{StaticResource SmallSectionTitle}" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Vertical">
                        <Button Content="MB" Style="{StaticResource NavPillButton}" Command="{Binding SelectCategoryCommand}" CommandParameter="MB" IsEnabled="{Binding IsMBEnabled}" Tag="{Binding IsMBSelected}" HorizontalContentAlignment="Left"/>
                        <Button Content="MTLH" Style="{StaticResource NavPillButton}" Command="{Binding SelectCategoryCommand}" CommandParameter="MTLH" IsEnabled="{Binding IsMTLHEnabled}" Tag="{Binding IsMTLHSelected}"/>
                        <Button Content="BÃ‰TON" Style="{StaticResource NavPillButton}" Command="{Binding SelectCategoryCommand}" CommandParameter="Beton" IsEnabled="{Binding IsBetonEnabled}" Tag="{Binding IsBetonSelected}"/>
                        <Button Content="SOL &amp; GNT" Style="{StaticResource NavPillButton}" Command="{Binding SelectCategoryCommand}" CommandParameter="Sol_GNT" IsEnabled="{Binding IsSolGNTEnabled}" Tag="{Binding IsSolGNTSelected}" HorizontalContentAlignment="Left"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Right Panel - Zone de MatÃ©riaux Disponibles STYLE ALIZÃ‰ AMÃ‰LIORÃ‰ -->
        <Border Grid.Column="1" Background="#FFFFFF" CornerRadius="8" Padding="12" BorderBrush="#D0D0D0" BorderThickness="1" Margin="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Bandeau 3. MatÃ©riaux AMÃ‰LIORÃ‰ COMPACT -->
                <Border Grid.Row="0" Background="#E8F4FD" CornerRadius="5" Padding="10,6" Margin="0,0,0,10" BorderBrush="#B3D9F2" BorderThickness="1">
                    <TextBlock Text="3. MatÃ©riau Disponible" Foreground="#1F2937" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                </Border>

                <!-- Fil d'Ariane AMÃ‰LIORÃ‰ COMPACT -->
                <Border Grid.Row="1" Background="#F8F9FA" CornerRadius="4" Padding="6,3" Margin="0,0,0,10" BorderBrush="#E9ECEF" BorderThickness="1" Visibility="{Binding ShowBreadcrumb, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="{Binding BreadcrumbText}" Foreground="#6C757D" FontSize="11" FontWeight="Medium" HorizontalAlignment="Center"/>
                </Border>

                <!-- Zone de contenu principal STYLE ALIZÃ‰ -->
                <Border Grid.Row="2" Background="#FAFAFA" CornerRadius="6" BorderBrush="#E0E0E0" BorderThickness="1" Padding="2">
                    <Grid>
                        <!-- Liste des matÃ©riaux avec fond blanc et bordures -->
                        <local:MaterialSelectionControl CurrentMaterialViewModel="{Binding CurrentMaterialViewModel}" 
                                                      Visibility="{Binding MaterialSelectionVisibility}" 
                                                      Background="#FFFFFF"/>

                        <!-- Message d'accueil STYLE ALIZÃ‰ COMPACT -->
                        <Border Background="#FFFFFF" CornerRadius="4" Visibility="{Binding AccueilVisibility}" 
                               BorderBrush="#DEE2E6" BorderThickness="1" Margin="16">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30">
                                <TextBlock Text="ðŸ“š" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,12" Opacity="0.6"/>
                                <TextBlock Text="BIBLIOTHÃˆQUE DES MATÃ‰RIAUX" 
                                         FontSize="16" FontWeight="Bold" 
                                         Foreground="#495057" HorizontalAlignment="Center" 
                                         Margin="0,0,0,6"/>
                                <TextBlock Text="SÃ©lectionnez une bibliothÃ¨que et une catÃ©gorie pour afficher les matÃ©riaux disponibles" 
                                         FontSize="12" Foreground="#6C757D" 
                                         HorizontalAlignment="Center" TextAlignment="Center" 
                                         TextWrapping="Wrap" MaxWidth="280"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Zone d'Action AMÃ‰LIORÃ‰E COMPACTE -->
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#F8F9FA" CornerRadius="8,8,0,0" Padding="16,12" Margin="8,0" BorderBrush="#DEE2E6" BorderThickness="1,1,1,0" Visibility="{Binding ElementName=Root, Path=ShowActionBar, Converter={StaticResource BoolToVisibility}}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="âœ“ Valider MatÃ©riau Choisi" 
                       Style="{StaticResource LibPrimaryButton}" 
                       Command="{Binding ValidateSelectionCommand}" 
                       IsEnabled="{Binding CanValidateSelection}" 
                       Margin="0,0,12,0" Width="200" FontSize="12"/>
                <Button Content="âœ• Fermer" 
                       Style="{StaticResource LibOutlineButton}" 
                       Command="{Binding CloseCommand}" 
                       Width="100" FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
