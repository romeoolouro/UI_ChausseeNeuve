<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_ChausseeNeuve.Views"
        xmlns:viewModels="clr-namespace:UI_ChausseeNeuve.ViewModels"
        x:Class="UI_ChausseeNeuve.Views.BibliothequeView"
        mc:Ignorable="d"
        d:DesignHeight="530"
        d:DesignWidth="900"
        FontFamily="Segoe UI"
        Background="{StaticResource PrimaryBg}">

        <UserControl.DataContext>
                <viewModels:BibliothequeViewModel/>
        </UserControl.DataContext>

        <Grid Background="{StaticResource PrimaryBg}">
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Left Panel - Étapes de Sélection -->
                <Border Grid.Column="0"
                        Style="{StaticResource SectionCardStyle}"
                        Width="280"
                        Margin="10">
                        <StackPanel Orientation="Vertical">
                                <!-- Titre principal -->
                                <TextBlock Text="ÉTAPES DE SÉLECTION"
                                           Style="{StaticResource SectionTitleStyle}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,15"/>

                                <Separator Background="{StaticResource CardBorder}"
                                           Margin="0,0,0,15"/>

                                <!-- Section 1: Bibliothèque -->
                                <TextBlock Text="1. Bibliothèque"
                                           Style="{StaticResource SectionTitleStyle}"
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <StackPanel Orientation="Vertical"
                                            Margin="0,0,0,20">
                                        <Button Content="MATERIAUX DU BENIN"
                                                Style="{StaticResource NavigationButtonStyle}"
                                                Command="{Binding SelectLibraryCommand}"
                                                CommandParameter="MateriauxBenin"
                                                Tag="{Binding IsMateriauxBeninSelected}"/>

                                        <Button Content="CATALOGUE SENEGALAIS"
                                                Style="{StaticResource NavigationButtonStyle}"
                                                Command="{Binding SelectLibraryCommand}"
                                                CommandParameter="CatalogueSenegalais"
                                                Tag="{Binding IsCatalogueSenegalaisSelected}"/>

                                        <Button Content="CATALOGUE FRANÇ. 1998"
                                                Style="{StaticResource NavigationButtonStyle}"
                                                Command="{Binding SelectLibraryCommand}"
                                                CommandParameter="CatalogueFrancais1998"
                                                Tag="{Binding IsCatalogueFrancaisSelected}"/>

                                        <Button Content="NF P 98-086 2019"
                                                Style="{StaticResource NavigationButtonStyle}"
                                                Command="{Binding SelectLibraryCommand}"
                                                CommandParameter="NFP98_086_2019"
                                                Tag="{Binding IsNFP98086Selected}"/>

                                        <Button Content="MATERIAUX UTILISATEUR"
                                                Style="{StaticResource NavigationButtonStyle}"
                                                Command="{Binding SelectLibraryCommand}"
                                                CommandParameter="MateriauxUser"
                                                Tag="{Binding IsMateriauxUserSelected}"/>
                                </StackPanel>

                                <Separator Background="{StaticResource CardBorder}"
                                           Margin="0,0,0,15"/>

                                <!-- Section 2: Catégorie -->
                                <TextBlock Text="2. Catégorie"
                                           Style="{StaticResource SectionTitleStyle}"
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <StackPanel Orientation="Vertical">
                                        <Button Content="MB"
                                                Style="{StaticResource NavigationButtonStyle}"
                                                Command="{Binding SelectCategoryCommand}"
                                                CommandParameter="MB"
                                                IsEnabled="{Binding IsMBEnabled}"
                                                Tag="{Binding IsMBSelected}"/>

                                        <Button Content="MTLH"
                                                Style="{StaticResource NavigationButtonStyle}"
                                                Command="{Binding SelectCategoryCommand}"
                                                CommandParameter="MTLH"
                                                IsEnabled="{Binding IsMTLHEnabled}"
                                                Tag="{Binding IsMTLHSelected}"/>

                                        <Button Content="BÉTON"
                                                Style="{StaticResource NavigationButtonStyle}"
                                                Command="{Binding SelectCategoryCommand}"
                                                CommandParameter="Beton"
                                                IsEnabled="{Binding IsBetonEnabled}"
                                                Tag="{Binding IsBetonSelected}"/>

                                        <Button Content="SOL &amp; GNT"
                                                Style="{StaticResource NavigationButtonStyle}"
                                                Command="{Binding SelectCategoryCommand}"
                                                CommandParameter="Sol_GNT"
                                                IsEnabled="{Binding IsSolGNTEnabled}"
                                                Tag="{Binding IsSolGNTSelected}"/>
                                </StackPanel>
                        </StackPanel>
                </Border>

                <!-- Right Panel - Zone de Matériaux Disponibles -->
                <Border Grid.Column="1"
                        Style="{StaticResource SectionCardStyle}"
                        Margin="10">
                        <Grid>
                                <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Titre principal -->
                                <TextBlock Grid.Row="0"
                                           Text="3. Matériau Disponible"
                                           Style="{StaticResource SectionTitleStyle}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,15"/>

                                <!-- Fil d'Ariane -->
                                <TextBlock Grid.Row="1"
                                           Text="{Binding BreadcrumbText}"
                                           Foreground="{StaticResource TextWhite}"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,15"
                                           Visibility="{Binding ShowBreadcrumb, Converter={StaticResource BoolToVisibility}}"/>

                                <!-- Zone de contenu principal -->
                                <Grid Grid.Row="2">
                                        <!-- Liste des matériaux -->
                                        <local:MaterialSelectionControl CurrentMaterialViewModel="{Binding CurrentMaterialViewModel}"
                                                                        DataContext="{Binding CurrentMaterialViewModel}"
                                                                        Visibility="{Binding MaterialSelectionVisibility}"/>

                                        <!-- Message d'accueil -->
                                        <Border Background="{StaticResource CardBg}"
                                                CornerRadius="5"
                                                Visibility="{Binding AccueilVisibility}">
                                                <TextBlock Text="BIBLIOTHÈQUE DES MATÉRIAUX&#x0a;&#x0a;SÉLECTIONNEZ UNE BIBLIOTHÈQUE ET UNE CATÉGORIE"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           FontSize="16"
                                                           Foreground="{StaticResource TextWhite}"
                                                           TextAlignment="Center"
                                                           Opacity="0.7"/>
                                        </Border>
                                </Grid>
                        </Grid>
                </Border>

                <!-- Zone d'Action -->
                <StackPanel Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="20">
                        <Button Content="Valider Matériau Choisi"
                                Style="{StaticResource PrimaryActionButtonStyle}"
                                Command="{Binding ValidateSelectionCommand}"
                                IsEnabled="{Binding CanValidateSelection}"
                                Margin="0,0,10,0"/>

                        <Button Content="Fermer"
                                Style="{StaticResource SecondaryActionButtonStyle}"
                                Command="{Binding CloseCommand}"/>
                </StackPanel>
        </Grid>
</UserControl>
