<UserControl x:Class="UI_ChausseeNeuve.Views.BibliothequeView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:local="clr-namespace:UI_ChausseeNeuve.Views"
              xmlns:viewModels="clr-namespace:UI_ChausseeNeuve.ViewModels"
              mc:Ignorable="d"
              d:DesignHeight="530"
              d:DesignWidth="900"
              FontFamily="Segoe UI"
              Background="{StaticResource PrimaryBg}"
              x:Name="Root">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Palette pour les boutons de navigation -->
        <SolidColorBrush x:Key="NavBtnBg" Color="#2B3440"/>
        <SolidColorBrush x:Key="NavBtnBgHover" Color="#344155"/>
        <SolidColorBrush x:Key="NavBtnBgPressed" Color="#212B39"/>
        <SolidColorBrush x:Key="NavBtnBorder" Color="#6B7C93"/>
        <SolidColorBrush x:Key="NavBtnBorderHover" Color="#8CA1BA"/>
        <SolidColorBrush x:Key="NavBtnBorderPressed" Color="#5A6B82"/>
        <SolidColorBrush x:Key="NavBtnSelectedBg" Color="#2563EB"/>
        <SolidColorBrush x:Key="NavBtnSelectedBorder" Color="#93C5FD"/>
        <SolidColorBrush x:Key="NavBtnText" Color="#E5E7EB"/>

        <!-- Bandeau titre (gris) pour la zone 3. Matériaux -->
        <SolidColorBrush x:Key="HeaderBandBg" Color="#7F7F7F"/>
        <SolidColorBrush x:Key="HeaderBandText" Color="#FFFFFF"/>

        <!-- Style bouton bibliotheque: forme pilule (contour clair, fond transparent) -->
        <Style x:Key="LibOutlineButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource NavBtnText}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#C9D1DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <!-- Supprime l'anneau de focus -->
            <Setter Property="FocusVisualStyle">
                <Setter.Value>
                    <Style TargetType="Control">
                        <Setter Property="Template"><Setter.Value><ControlTemplate TargetType="Control"/></Setter.Value></Setter>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Outer" CornerRadius="18"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"/>
                            <Border x:Name="Inner" CornerRadius="16" Margin="1"
                                    BorderBrush="#66FFFFFF" BorderThickness="1" Background="Transparent"/>
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Outer" Property="BorderBrush" Value="#E5E7EB"/>
                                <Setter TargetName="Inner" Property="BorderBrush" Value="#99FFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Outer" Property="Background" Value="#1AFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Outer" Property="BorderBrush" Value="#D1D5DB"/>
                                <Setter TargetName="Inner" Property="BorderBrush" Value="#80FFFFFF"/>
                                <Setter TargetName="Outer" Property="Background" Value="#26FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Outer" Property="Opacity" Value="0.55"/>
                                <Setter TargetName="Inner" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Bouton d'action principal (plein, pilule) -->
        <Style x:Key="LibPrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="BorderBrush" Value="#93C5FD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FocusVisualStyle">
                <Setter.Value>
                    <Style TargetType="Control">
                        <Setter Property="Template"><Setter.Value><ControlTemplate TargetType="Control"/></Setter.Value></Setter>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Outer" CornerRadius="18"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"/>
                            <Border x:Name="Inner" CornerRadius="16" Margin="1"
                                    BorderBrush="#66FFFFFF" BorderThickness="1" Background="#14FFFFFF"/>
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Outer" Property="Background" Value="#2E6CF0"/>
                                <Setter TargetName="Outer" Property="BorderBrush" Value="#B3D5FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Outer" Property="Background" Value="#1E54C7"/>
                                <Setter TargetName="Outer" Property="BorderBrush" Value="#7BB7FF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Outer" Property="Opacity" Value="0.55"/>
                                <Setter TargetName="Inner" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styles locaux réduits pour la bibliothèque -->
        <Style x:Key="SmallSectionTitle" TargetType="TextBlock" BasedOn="{StaticResource SectionTitleStyle}">
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="SmallLabel" TargetType="TextBlock" BasedOn="{StaticResource LabelStyle}">
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <!-- Style général utilisé par les boutons de navigation -->
        <Style x:Key="NavPillButton" TargetType="Button" BasedOn="{StaticResource LibOutlineButton}"/>
    </UserControl.Resources>

    <UserControl.DataContext>
        <viewModels:BibliothequeViewModel/>
    </UserControl.DataContext>

    <Grid Background="{StaticResource PrimaryBg}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Left Panel - Étapes de Sélection -->
        <Border Grid.Column="0" Style="{StaticResource SectionCardStyle}" Width="280" Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical">
                    <!-- Titre principal -->
                    <TextBlock Text="ÉTAPES DE SÉLECTION" Style="{StaticResource SmallSectionTitle}" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <Separator Background="{StaticResource CardBorder}" Margin="0,0,0,15"/>

                    <!-- Section 1: Bibliothèque -->
                    <TextBlock Text="1. Bibliothèque" Style="{StaticResource SmallSectionTitle}" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                        <Button Content="MATERIAUX DU BENIN" Style="{StaticResource NavPillButton}" Command="{Binding SelectLibraryCommand}" CommandParameter="MateriauxBenin" Tag="{Binding IsMateriauxBeninSelected}"/>
                        <Button Content="CATALOGUE SENEGALAIS" Style="{StaticResource NavPillButton}" Command="{Binding SelectLibraryCommand}" CommandParameter="CatalogueSenegalais" Tag="{Binding IsCatalogueSenegalaisSelected}"/>
                        <Button Content="CATALOGUE FRANÇ. 1998" Style="{StaticResource NavPillButton}" Command="{Binding SelectLibraryCommand}" CommandParameter="CatalogueFrancais1998" Tag="{Binding IsCatalogueFrancaisSelected}"/>
                        <Button Content="NF P 98-086 2019" Style="{StaticResource NavPillButton}" Command="{Binding SelectLibraryCommand}" CommandParameter="NFP98_086_2019" Tag="{Binding IsNFP98086Selected}"/>
                        <Button Content="MATERIAUX UTILISATEUR" Style="{StaticResource NavPillButton}" Command="{Binding SelectLibraryCommand}" CommandParameter="MateriauxUser" Tag="{Binding IsMateriauxUserSelected}"/>
                    </StackPanel>

                    <Separator Background="{StaticResource CardBorder}" Margin="0,0,0,15"/>

                    <!-- Section 2: Catégorie -->
                    <TextBlock Text="2. Catégorie" Style="{StaticResource SmallSectionTitle}" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Vertical">
                        <Button Content="MB" Style="{StaticResource NavPillButton}" Command="{Binding SelectCategoryCommand}" CommandParameter="MB" IsEnabled="{Binding IsMBEnabled}" Tag="{Binding IsMBSelected}" HorizontalContentAlignment="Left"/>
                        <Button Content="MTLH" Style="{StaticResource NavPillButton}" Command="{Binding SelectCategoryCommand}" CommandParameter="MTLH" IsEnabled="{Binding IsMTLHEnabled}" Tag="{Binding IsMTLHSelected}"/>
                        <Button Content="BÉTON" Style="{StaticResource NavPillButton}" Command="{Binding SelectCategoryCommand}" CommandParameter="Beton" IsEnabled="{Binding IsBetonEnabled}" Tag="{Binding IsBetonSelected}"/>
                        <Button Content="SOL &amp; GNT" Style="{StaticResource NavPillButton}" Command="{Binding SelectCategoryCommand}" CommandParameter="Sol_GNT" IsEnabled="{Binding IsSolGNTEnabled}" Tag="{Binding IsSolGNTSelected}" HorizontalContentAlignment="Left"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Right Panel - Zone de Matériaux Disponibles -->
        <Border Grid.Column="1" Background="#2A2D31" CornerRadius="6" Padding="10" BorderBrush="#A0A0A0" BorderThickness="1" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Bandeau 3. Matériaux -->
                <Border Grid.Row="0" Background="{StaticResource HeaderBandBg}" CornerRadius="4" Padding="10,6" Margin="0,0,0,10">
                    <TextBlock Text="3. Matériau Disponible" Foreground="{StaticResource HeaderBandText}" FontWeight="Bold" HorizontalAlignment="Center"/>
                </Border>

                <!-- Fil d'Ariane -->
                <TextBlock Grid.Row="1" Text="{Binding BreadcrumbText}" Foreground="#E5E7EB" FontSize="11" HorizontalAlignment="Center" Margin="0,0,0,15" Visibility="{Binding ShowBreadcrumb, Converter={StaticResource BoolToVisibility}}"/>

                <!-- Zone de contenu principal -->
                <Grid Grid.Row="2">
                    <!-- Liste des matériaux -->
                    <local:MaterialSelectionControl CurrentMaterialViewModel="{Binding CurrentMaterialViewModel}" Visibility="{Binding MaterialSelectionVisibility}" Background="#1F2125"/>

                    <!-- Message d'accueil -->
                    <Border Background="{StaticResource CardBg}" CornerRadius="5" Visibility="{Binding AccueilVisibility}">
                        <TextBlock Text="BIBLIOTHÈQUE DES MATÉRIAUX&#x0a;&#x0a;SÉLECTIONNEZ UNE BIBLIOTHÈQUE ET UNE CATÉGORIE" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="{StaticResource TextWhite}" TextAlignment="Center" Opacity="0.7"/>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Zone d'Action -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20" Visibility="{Binding ElementName=Root, Path=ShowActionBar, Converter={StaticResource BoolToVisibility}}">
            <Button Content="Valider Matériau Choisi" Style="{StaticResource LibPrimaryButton}" Command="{Binding ValidateSelectionCommand}" IsEnabled="{Binding CanValidateSelection}" Margin="0,0,10,0" Width="220"/>
            <Button Content="Fermer" Style="{StaticResource LibOutlineButton}" Command="{Binding CloseCommand}" Width="140"/>
        </StackPanel>
    </Grid>
</UserControl>
