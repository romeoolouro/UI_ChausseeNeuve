<Window x:Class="UI_ChausseeNeuve.Windows.AccueilWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:UI_ChausseeNeuve.Views"
        Title="BENIROUTE — Accueil" Height="760" Width="1260" WindowStartupLocation="CenterScreen"
        Background="{StaticResource GrayBgBrush}">
    <DockPanel>
        <!-- En-tête -->
        <Border DockPanel.Dock="Top" Background="{StaticResource PrimaryBrush}" Padding="8">
            <DockPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="←" Width="40" Height="36" Margin="0,0,12,0" Click="Back_Click" Style="{StaticResource GhostButton}"/>
                    <Image Source="pack://application:,,,/UI_ChausseeNeuve;component/Resources/Icons/logo_beniroute.png"
                           Height="26" Stretch="Uniform" Margin="0,0,8,0"/>
                    <TextBlock Text="BENIROUTE — " Foreground="White" FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="{Binding HeaderTitle}" Foreground="White" FontSize="22"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <views:HoverNavBar Grid.Column="0" x:Name="NavBar"/>

            <!-- Contenu principal avec watermark -->
            <Grid Grid.Column="1" Margin="16">
                <ContentControl x:Name="MainContent"/>
                <Image x:Name="CenterLogo"
       Source="pack://application:,,,/UI_ChausseeNeuve;component/Resources/Icons/logo_beniroute.png"
       HorizontalAlignment="Center"
       VerticalAlignment="Center"
       Stretch="Uniform"
       Width="560"
       Opacity="0.45"
       IsHitTestVisible="False"/>
            </Grid>
        </Grid>
    </DockPanel>
</Window>