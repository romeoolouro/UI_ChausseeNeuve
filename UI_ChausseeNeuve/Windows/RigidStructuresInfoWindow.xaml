<Window x:Class="UI_ChausseeNeuve.Windows.RigidStructuresInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Informations Kd / Sh - Structures rigides"
        Height="420" Width="520"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource PrimaryBg}">

    <Window.Resources>
        <SolidColorBrush x:Key="PanelCellBg" Color="#3F3F3F"/>
        <SolidColorBrush x:Key="PanelCellBorder" Color="#2E3237"/>
        <Style x:Key="HeaderCellBox" TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource PanelCellBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource PanelCellBg}"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="1"/>
        </Style>
        <Style x:Key="CellBox" TargetType="Border" BasedOn="{StaticResource HeaderCellBox}">
            <Setter Property="Padding" Value="4,2"/>
        </Style>
    </Window.Resources>

    <Border Style="{StaticResource SectionCardStyle}" Margin="12">
        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="OK" Width="100" Style="{StaticResource PrimaryActionButtonStyle}" Click="Ok_Click"/>
            </StackPanel>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="4">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="i" FontSize="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Valeurs de 1/Kd pour les structures rigides :" Style="{StaticResource SectionTitleStyle}" FontSize="16"/>
                    </StackPanel>

                    <StackPanel Margin="8,0,0,12">
                        <TextBlock Text="- Dalles BC sur couche de forme ou BC/BM ou BC/GH - 1/Kd = 1,70" Style="{StaticResource InfoTextStyle}"/>
                        <TextBlock Text="- BCg/BM ou BCg/GH - 1/Kd = 1,47" Style="{StaticResource InfoTextStyle}"/>
                        <TextBlock Text="- BAC/BM (guide 1994) - 1/Kd = 1,47" Style="{StaticResource InfoTextStyle}"/>
                        <TextBlock Text="- BAC/BM (NFP 98-086) - 1/Kd = 1,37" Style="{StaticResource InfoTextStyle}"/>
                        <TextBlock Text="- Couche de fondation - 1/Kd = 1,00" Style="{StaticResource InfoTextStyle}"/>
                        <TextBlock Text="- BCg/GB3 - 1/Kd = 1,37" Style="{StaticResource InfoTextStyle}"/>
                        <TextBlock Text="- BAC/GB3 - 1/Kd = 1,07" Style="{StaticResource InfoTextStyle}"/>
                    </StackPanel>

                    <TextBlock Text="Valeurs de Sh :" Style="{StaticResource SectionTitleStyle}" FontSize="16" Margin="0,0,0,8"/>

                    <Grid HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource HeaderCellBox}"><TextBlock Text="Type de materiau"/></Border>
                        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource HeaderCellBox}"><TextBlock Text="A"/></Border>
                        <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource HeaderCellBox}"><TextBlock Text="B"/></Border>
                        <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource HeaderCellBox}"><TextBlock Text="C"/></Border>

                        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CellBox}"><TextBlock Text="Couche unique de beton sur couche de forme"/></Border>
                        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CellBox}"><TextBlock Text="0,03 m"/></Border>
                        <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource CellBox}"><TextBlock Text="0,03 m"/></Border>
                        <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource CellBox}"><TextBlock Text="0,03 m"/></Border>

                        <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource CellBox}"><TextBlock Text="Couche base / fondation en GH, BM ou enrobe"/></Border>
                        <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource CellBox}"><TextBlock Text="0,03 m"/></Border>
                        <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource CellBox}"><TextBlock Text="0,02 m"/></Border>
                        <Border Grid.Row="2" Grid.Column="3" Style="{StaticResource CellBox}"><TextBlock Text="0,01 m"/></Border>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Border>
</Window>