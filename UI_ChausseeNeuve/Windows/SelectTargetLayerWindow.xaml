<Window x:Class="UI_ChausseeNeuve.Windows.SelectTargetLayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selection de la couche cible"
        Height="420" Width="520"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource PrimaryBg}">
    <Border Style="{StaticResource SectionCardStyle}" Margin="10">
        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                <Button Content="Annuler" Width="120" Margin="0,0,8,0" Style="{StaticResource SecondaryActionButtonStyle}" Click="Cancel_Click"/>
                <Button Content="Valider" Width="120" Style="{StaticResource PrimaryActionButtonStyle}" Click="Validate_Click"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Choisissez la ligne (couche) sur laquelle appliquer le materiau valide" Style="{StaticResource SectionTitleStyle}" FontSize="16"/>
                <ListBox x:Name="LayersList"
                         Style="{StaticResource ModernListBoxStyle}"
                         Margin="0,10,0,0"
                         MinHeight="260"/>
            </StackPanel>
        </DockPanel>
    </Border>
</Window>