<Window x:Class="UI_ChausseeNeuve.Windows.SaisieKsTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="S&#233;lection de ks - Tableau Guide" Height="340" Width="900" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#2D2D30" Foreground="#FFEAEAEA">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="S&#233;lectionnez la valeur de ks selon la portance ou le module de la couche sous-jacente (Guide)" FontWeight="Bold" FontSize="15" Margin="0,0,0,12" TextWrapping="Wrap"/>
        <Border Grid.Row="1" Background="#232326" CornerRadius="14" Padding="18" Margin="0,0,0,0">
            <StackPanel>
                <TextBlock Text="Tableau ks (Guide)" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="170"/>
                        <ColumnDefinition Width="170"/>
                        <ColumnDefinition Width="170"/>
                        <ColumnDefinition Width="170"/>
                    </Grid.ColumnDefinitions>
                    <!-- Headers -->
                    <Border Grid.Row="0" Grid.Column="0" Background="#2D2D30" CornerRadius="6" Padding="8,4" Margin="2">
                        <TextBlock Text="Portance ou Module" FontWeight="Bold"/>
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" Background="#2D2D30" CornerRadius="6" Padding="8,4" Margin="2">
                        <TextBlock Text="E &lt; 50 MPa" FontWeight="Bold" TextAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="0" Grid.Column="2" Background="#2D2D30" CornerRadius="6" Padding="8,4" Margin="2">
                        <TextBlock Text="50 MPa &#8804; E &lt; 80 MPa" FontWeight="Bold" TextAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="0" Grid.Column="3" Background="#2D2D30" CornerRadius="6" Padding="8,4" Margin="2">
                        <TextBlock Text="80 MPa &#8804; E &lt; 120 MPa" FontWeight="Bold" TextAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="0" Grid.Column="4" Background="#2D2D30" CornerRadius="6" Padding="8,4" Margin="2">
                        <TextBlock Text="E &#8805; 120 MPa" FontWeight="Bold" TextAlignment="Center"/>
                    </Border>
                    <!-- ks values row -->
                    <Border Grid.Row="1" Grid.Column="0" Background="#232326" CornerRadius="6" Padding="8,4" Margin="2">
                        <TextBlock Text="ks" FontStyle="Italic" FontSize="16" VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" Background="#35363A" CornerRadius="6" Padding="8,4" Margin="2">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <RadioButton x:Name="RadioKs1" Content="1/1,2 (&#8776;0,83)" GroupName="Ks" FontSize="15"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="2" Background="#35363A" CornerRadius="6" Padding="8,4" Margin="2">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <RadioButton x:Name="RadioKs2" Content="1/1,1 (&#8776;0,91)" GroupName="Ks" FontSize="15"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="3" Background="#35363A" CornerRadius="6" Padding="8,4" Margin="2">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <RadioButton x:Name="RadioKs3" Content="1/1,065 (&#8776;0,94)" GroupName="Ks" FontSize="15"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="4" Background="#35363A" CornerRadius="6" Padding="8,4" Margin="2">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <RadioButton x:Name="RadioKs4" Content="1 (1,00)" GroupName="Ks" FontSize="15"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Valider" Width="90" Margin="0,0,8,0" Click="Ok_Click" Background="#106EBE" Foreground="White"/>
            <Button Content="Annuler" Width="90" Click="Cancel_Click" Background="#444" Foreground="#FFEAEAEA"/>
        </StackPanel>
    </Grid>
</Window>
