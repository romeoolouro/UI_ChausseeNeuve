<Window x:Class="UI_ChausseeNeuve.Windows.SaisieKdTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="S&#233;lection du coefficient kd (NFP)" Height="560" Width="800" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#2D2D30" Foreground="#FFEAEAEA">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="S&#233;lectionnez la valeur de kd selon la norme NFP ou saisissez-la manuellement" FontWeight="Bold" FontSize="15" Margin="0,0,0,12" TextWrapping="Wrap"/>
        <Border Grid.Row="1" Background="#232326" CornerRadius="14" Padding="18" Margin="0,0,0,0">
            <StackPanel HorizontalAlignment="Left">
                <TextBlock Text="Tableau kd (NFP)" FontWeight="Bold" FontSize="14" Margin="0,0,0,10" HorizontalAlignment="Left"/>
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="48"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="520"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>
                    <!-- Header -->
                    <Border Grid.Row="0" Grid.Column="0" BorderBrush="#888" BorderThickness="1,1,1,1" Background="#29292B">
                        <TextBlock Text=""/>
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" BorderBrush="#888" BorderThickness="0,1,1,1" Background="#29292B">
                        <TextBlock Text="kd" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <!-- Section base-roulement -->
                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="#888" BorderThickness="1,0,1,1" Background="#232326">
                        <TextBlock Text="Couche de base-roulement" FontWeight="Bold" Margin="4,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    </Border>
                    <Border Grid.Row="2" Grid.Column="0" BorderBrush="#888" BorderThickness="1,0,1,1">
                        <TextBlock Text="BCg/Bm ou BCg/MTLH" VerticalAlignment="Center" Margin="4,0,0,0" HorizontalAlignment="Left"/>
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1" BorderBrush="#888" BorderThickness="0,0,1,1">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                            <RadioButton x:Name="RadioKd1" Content="1/1,47" GroupName="Kd" FontSize="15"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="3" Grid.Column="0" BorderBrush="#888" BorderThickness="1,0,1,1">
                        <TextBlock Text="BAC/Bm ou BCg/GB3" VerticalAlignment="Center" Margin="4,0,0,0" HorizontalAlignment="Left"/>
                    </Border>
                    <Border Grid.Row="3" Grid.Column="1" BorderBrush="#888" BorderThickness="0,0,1,1">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                            <RadioButton x:Name="RadioKd2" Content="1/1,37" GroupName="Kd" FontSize="15"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="4" Grid.Column="0" BorderBrush="#888" BorderThickness="1,0,1,1">
                        <TextBlock Text="BAC/GB3" VerticalAlignment="Center" Margin="4,0,0,0" HorizontalAlignment="Left"/>
                    </Border>
                    <Border Grid.Row="4" Grid.Column="1" BorderBrush="#888" BorderThickness="0,0,1,1">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                            <RadioButton x:Name="RadioKd3" Content="1/1,07" GroupName="Kd" FontSize="15"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="5" Grid.Column="0" BorderBrush="#888" BorderThickness="1,0,1,1">
                        <TextBlock Text="Autres structures" VerticalAlignment="Center" Margin="4,0,0,0" HorizontalAlignment="Left"/>
                    </Border>
                    <Border Grid.Row="5" Grid.Column="1" BorderBrush="#888" BorderThickness="0,0,1,1">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                            <RadioButton x:Name="RadioKd4" Content="1/1,7" GroupName="Kd" FontSize="15"/>
                        </StackPanel>
                    </Border>
                    <!-- Section fondation -->
                    <Border Grid.Row="6" Grid.Column="0" BorderBrush="#888" BorderThickness="1,0,1,1" Background="#232326">
                        <TextBlock Text="Couche de fondation&#x0a;Toutes structures (y compris b&#233;ton maigre) sauf dalles &#233;paisses" FontWeight="Bold" TextWrapping="Wrap" Margin="4,0,0,0" HorizontalAlignment="Left"/>
                    </Border>
                    <Border Grid.Row="6" Grid.Column="1" BorderBrush="#888" BorderThickness="0,0,1,1">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                            <RadioButton x:Name="RadioKd5" Content="1" GroupName="Kd" FontSize="15"/>
                        </StackPanel>
                    </Border>
                </Grid>
                <StackPanel Orientation="Horizontal" Margin="0,12,0,0" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock Text="Saisie manuelle : " VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="ManualKdBox" Width="80" Height="26" FontSize="15" TextChanged="ManualKdBox_TextChanged"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Valider" Width="90" Margin="0,0,8,0" Click="Ok_Click" Background="#106EBE" Foreground="White"/>
            <Button Content="Annuler" Width="90" Click="Cancel_Click" Background="#444" Foreground="#FFEAEAEA"/>
        </StackPanel>
    </Grid>
</Window>
