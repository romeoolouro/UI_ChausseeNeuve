<Window x:Class="UI_ChausseeNeuve.Windows.ProjetInfosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Informations du projet"
        Height="700"
        Width="1120"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBg}"
        FontSize="18">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0"
                Background="{StaticResource HeaderBg}"
                Padding="12"
                BorderBrush="#33000000"
                BorderThickness="0,0,0,1"
                Margin="0,0,0,12">
            <TextBlock x:Name="TitleBlock"
                       Style="{StaticResource HeaderText}"
                       Text="Entrez les informations de votre projet"/>
        </Border>

        <!-- Carte centrale (thémée) -->
        <Border Grid.Row="1"
                Style="{StaticResource SectionCardStyle}">
            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="72"/>
                </Grid.ColumnDefinitions>

                <!-- Titre du projet -->
                <TextBlock Grid.Row="0"
                        Grid.Column="0"
                           Text="Titre du projet"
                           Style="{StaticResource LabelStyle}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}"
                           VerticalAlignment="Center"
                           Margin="0,6,12,0"/>
                <TextBox  Grid.Row="0"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                          Style="{StaticResource ModernTextBoxStyle}"
                          Height="40"
                          FontSize="16"
                          Margin="0,0,0,12"
                          Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Auteur -->
                <TextBlock Grid.Row="1"
                        Grid.Column="0"
                           Text="Auteur"
                           Style="{StaticResource LabelStyle}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}"
                           VerticalAlignment="Center"
                           Margin="0,6,12,0"/>
                <TextBox  Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                          Style="{StaticResource ModernTextBoxStyle}"
                          Height="40"
                          FontSize="16"
                          Margin="0,0,0,12"
                          Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Emplacement du projet -->
                <TextBlock Grid.Row="2"
                        Grid.Column="0"
                           Text="Emplacement du projet"
                           Style="{StaticResource LabelStyle}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}"
                           VerticalAlignment="Center"
                           Margin="0,6,12,0"/>
                <TextBox  Grid.Row="2"
                        Grid.Column="1"
                          Style="{StaticResource ModernTextBoxStyle}"
                          Height="40"
                          FontSize="16"
                          Margin="0,0,8,12"
                          x:Name="LocationBox"
                          Text="{Binding Location, UpdateSourceTrigger=PropertyChanged}"/>
                <Button   Grid.Row="2"
                        Grid.Column="2"
                          Width="48"
                        Height="40"
                          Style="{StaticResource SecondaryActionButtonStyle}"
                          Click="Browse_Click"
                          ToolTip="Parcourir..."
                          AutomationProperties.Name="Parcourir"
                          HorizontalAlignment="Center"
                        Margin="0,0,0,12">
                    <Viewbox Width="18"
                            Height="18">
                        <!-- folder icon path -->
                        <Path Fill="{StaticResource TextPrimary}"
                                Data="M3,7 C2.4477,7 2,7.4477 2,8 L2,16 C2,16.5523 2.4477,17 3,17 L21,17 C21.5523,17 22,16.5523 22,16 L22,9 C22,8.4477 21.5523,8 21,8 L12,8 C11.4477,8 11,7.5523 11,7 L10,6 C9.7348,5.724 9.387,5.552 9,5 L6,5 C5.4477,5 5,4.5523 5,4 L5,4 C5,3.4477 5.4477,3 6,3 L10,3 C10.5523,3 11,3.4477 11,4 L11,4"/>
                    </Viewbox>
                </Button>

                <!-- Description -->
                <TextBlock Grid.Row="3"
                        Grid.Column="0"
                           Text="Description du projet"
                           Style="{StaticResource LabelStyle}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}"
                           VerticalAlignment="Top"
                           Margin="0,6,12,0"/>
                <TextBox  Grid.Row="3"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                          Style="{StaticResource ModernTextBoxStyle}"
                          MinHeight="180"
                          FontSize="15"
                          AcceptsReturn="True"
                          TextWrapping="Wrap"
                          Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
        </Border>

        <!-- Boutons bas -->
        <Grid Grid.Row="2"
                Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                <Button Content="RETOUR"
                        Width="140"
                        Height="40"
                        Style="{StaticResource SecondaryActionButtonStyle}"
                        Click="Back_Click"
                        Margin="0,0,12,0"/>
            </StackPanel>
            <StackPanel Grid.Column="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                <Button Content="CRÉER"
                        Width="140"
                        Height="40"
                        Style="{StaticResource PrimaryActionButtonStyle}"
                        Click="Create_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
