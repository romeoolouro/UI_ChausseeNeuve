<Window x:Class="UI_ChausseeNeuve.Windows.DocumentationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Documentation - Valeurs Admissibles"
        Width="900"
        Height="700"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource PrimaryBg}"
        ResizeMode="CanResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Styles locaux identiques a ceux utilises dans SETRA/CATALOGUE -->
        <SolidColorBrush x:Key="PanelCellBg" Color="#3F444B"/>
        <SolidColorBrush x:Key="PanelCellBorder" Color="#2E3237"/>
        <Style x:Key="HeaderCellBox" TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource PanelCellBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource PanelCellBg}"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style x:Key="CellBox" TargetType="Border" BasedOn="{StaticResource HeaderCellBox}">
            <Setter Property="Padding" Value="4,2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource AccentBlue}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="??" FontSize="24" Foreground="White" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Documentation complete" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock Text="Guide d'utilisation pour le calcul des valeurs admissibles" FontSize="12" Foreground="White" Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Content="X" 
                        FontSize="16" 
                        FontWeight="Bold"
                        Background="Transparent" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Padding="10,5"
                        Click="Close_Click"
                        ToolTip="Fermer la documentation"/>
            </Grid>
        </Border>

        <!-- Main content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <TabControl Background="Transparent" BorderThickness="0">
                
                <!-- Tab 1: User guide -->
                <TabItem Header="Guide d'utilisation">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            
                            <!-- Calculation steps -->
                            <Border Style="{StaticResource SectionCardStyle}" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="Etapes de calcul" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>
                                    <TextBlock Text="1. Configurez les parametres de trafic" FontSize="12" Margin="0,5,0,2"/>
                                    <TextBlock Text="2. Calculez le trafic cumule (TCPL)" FontSize="12" Margin="0,2,0,2"/>
                                    <TextBlock Text="3. Ajustez les parametres materiaux" FontSize="12" Margin="0,2,0,2"/>
                                    <TextBlock Text="4. Lancez le calcul des valeurs admissibles" FontSize="12" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Synchronization -->
                            <Border Style="{StaticResource SectionCardStyle}" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="Synchronisation automatique" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>
                                    <TextBlock Text="Les valeurs se synchronisent automatiquement avec la structure de chaussee." FontSize="13" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Default parameters -->
                            <Border Style="{StaticResource SectionCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Parametres par defaut" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>
                                    <TextBlock Text="Chaque materiau possede des valeurs par defaut selon NF P98-086." FontSize="13" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Tab 2: Quick actions -->
                <TabItem Header="Actions rapides">
                    <StackPanel Margin="20">
                        <Border Style="{StaticResource SectionCardStyle}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Actions sur les donnees" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>
                                <Button Content="Copier toutes les valeurs" Style="{StaticResource SecondaryActionButtonStyle}" Margin="0,5" Width="250"/>
                                <Button Content="Importer depuis Excel" Style="{StaticResource SecondaryActionButtonStyle}" Margin="0,5" Width="250"/>
                                <Button Content="Exporter vers Excel" Style="{StaticResource SecondaryActionButtonStyle}" Margin="0,5" Width="250"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Style="{StaticResource SectionCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Gestion des modeles" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>
                                <Button Content="Sauvegarder comme modele" Style="{StaticResource SecondaryActionButtonStyle}" Margin="0,5" Width="250"/>
                                <Button Content="Charger un modele" Style="{StaticResource SecondaryActionButtonStyle}" Margin="0,5" Width="250"/>
                                <Button Content="Reinitialiser" Style="{StaticResource SecondaryActionButtonStyle}" Margin="0,5" Width="250"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </TabItem>
                
                <!-- Tab 3: Formules -->
                <TabItem Header="Formules et calculs">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            
                            <!-- Traffic formulas -->
                            <Border Style="{StaticResource SectionCardStyle}" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Calcul du trafic cumule (TCPL)" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>
                                    
                                    <TextBlock Text="Taux arithmetique :" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                                    <Border Background="#f8f9fa" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                        <TextBlock Text="TCPL = 365 x MJA x DS x (1 + (DS-1) x TA/200)" FontFamily="Consolas" FontSize="13"/>
                                    </Border>
                                    
                                    <TextBlock Text="Taux geometrique :" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                                    <Border Background="#f8f9fa" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                        <TextBlock Text="TCPL = 365 x MJA x ((1+TA/100)^DS - 1) / (TA/100)" FontFamily="Consolas" FontSize="13"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                            
                            <!-- Allowable values formulas -->
                            <Border Style="{StaticResource SectionCardStyle}" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Calcul des valeurs admissibles" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>
                                    
                                    <TextBlock Text="Formule generale :" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                                    <Border Background="#e7f3ff" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                                        <TextBlock Text="Valeur admissible = Amplitude x (N/10^6)^(-1/b) x kc x kr x ks x ktheta x kd" FontFamily="Consolas" FontSize="13"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                            
                            <!-- Parameters -->
                            <Border Style="{StaticResource SectionCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Definition des parametres" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                            <TextBlock Text="Parametres de base :" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,10"/>
                                            <TextBlock Text="- Sn/Sh : Valeurs de reference a 10^6 cycles" FontSize="11" Margin="0,2"/>
                                            <TextBlock Text="- b : Pente de fatigue (valeur negative)" FontSize="11" Margin="0,2"/>
                                            <TextBlock Text="- N : Nombre de cycles (TCPL)" FontSize="11" Margin="0,2"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Coefficients :" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,10"/>
                                            <TextBlock Text="- kc : Coefficient de calage (1.0 a 1.5)" FontSize="11" Margin="0,2"/>
                                            <TextBlock Text="- kr : Coefficient de risque (0.8 a 1.2)" FontSize="11" Margin="0,2"/>
                                            <TextBlock Text="- ks : Effet de structure (1.0 a 1.5)" FontSize="11" Margin="0,2"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Tab 4: NF P98-086 (format identique aux tableaux noirs) -->
                <TabItem Header="NF P98-086">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <!-- Classes de trafic -->
                            <Border Background="Black" BorderBrush="White" BorderThickness="2" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Classes de trafic" FontWeight="SemiBold" FontSize="16" Foreground="White"/>
                                    <Grid HorizontalAlignment="Center" Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource HeaderCellBox}"><TextBlock Text="Classe :"/></Border>
                                        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T5"/></Border>
                                        <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T4"/></Border>
                                        <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T3"/></Border>
                                        <Border Grid.Row="0" Grid.Column="4" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T3+"/></Border>
                                        <Border Grid.Row="0" Grid.Column="5" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T2"/></Border>
                                        <Border Grid.Row="0" Grid.Column="6" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T1"/></Border>
                                        <Border Grid.Row="0" Grid.Column="7" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T0"/></Border>
                                        <Border Grid.Row="0" Grid.Column="8" Style="{StaticResource HeaderCellBox}"><TextBlock Text="TEX"/></Border>

                                        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource HeaderCellBox}"><TextBlock Text="Mg"/></Border>
                                        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CellBox}"><TextBlock Text="5"/></Border>
                                        <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource CellBox}"><TextBlock Text="35"/></Border>
                                        <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource CellBox}"><TextBlock Text="85"/></Border>
                                        <Border Grid.Row="1" Grid.Column="4" Style="{StaticResource CellBox}"><TextBlock Text="200"/></Border>
                                        <Border Grid.Row="1" Grid.Column="5" Style="{StaticResource CellBox}"><TextBlock Text="500"/></Border>
                                        <Border Grid.Row="1" Grid.Column="6" Style="{StaticResource CellBox}"><TextBlock Text="1200"/></Border>
                                        <Border Grid.Row="1" Grid.Column="7" Style="{StaticResource CellBox}"><TextBlock Text="3000"/></Border>
                                        <Border Grid.Row="1" Grid.Column="8" Style="{StaticResource CellBox}"><TextBlock Text="9000"/></Border>

                                        <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource HeaderCellBox}"><TextBlock Text="TMJA"/></Border>
                                        <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource CellBox}"><TextBlock Text="1"/></Border>
                                        <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource CellBox}"><TextBlock Text="25"/></Border>
                                        <Border Grid.Row="2" Grid.Column="3" Style="{StaticResource CellBox}"><TextBlock Text="50"/></Border>
                                        <Border Grid.Row="2" Grid.Column="4" Style="{StaticResource CellBox}"><TextBlock Text="150"/></Border>
                                        <Border Grid.Row="2" Grid.Column="5" Style="{StaticResource CellBox}"><TextBlock Text="300"/></Border>
                                        <Border Grid.Row="2" Grid.Column="6" Style="{StaticResource CellBox}"><TextBlock Text="750"/></Border>
                                        <Border Grid.Row="2" Grid.Column="7" Style="{StaticResource CellBox}"><TextBlock Text="2000"/></Border>
                                        <Border Grid.Row="2" Grid.Column="8" Style="{StaticResource CellBox}"><TextBlock Text="5000"/></Border>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Peri-urbain / Rase campagne -->
                            <Border Background="Black" BorderBrush="White" BorderThickness="2" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Chaussees en milieu peri-urbain et rase campagne" FontWeight="SemiBold" FontSize="16" Foreground="White"/>
                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Non autoroutier -->
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Chaussees a caractere non autoroutier" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                            <Grid HorizontalAlignment="Center">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="220"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="60"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource HeaderCellBox}"><TextBlock Text="Materiaux bitumineux"/></Border>
                                                <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T5"/></Border>
                                                <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T4"/></Border>
                                                <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T3"/></Border>
                                                <Border Grid.Row="0" Grid.Column="4" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T3+"/></Border>
                                                <Border Grid.Row="0" Grid.Column="5" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T2"/></Border>
                                                <Border Grid.Row="0" Grid.Column="6" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T1"/></Border>
                                                <Border Grid.Row="0" Grid.Column="7" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T0"/></Border>

                                                <!-- Valeurs illustratives (format uniquement) -->
                                                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource HeaderCellBox}"><TextBlock Text="Materiaux traites hydrau. et betons"/></Border>
                                                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource HeaderCellBox}"><TextBlock Text="GNT et sol"/></Border>

                                                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CellBox}"><TextBlock Text="0,3"/></Border>
                                                <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource CellBox}"><TextBlock Text="0,3"/></Border>
                                                <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource CellBox}"><TextBlock Text="0,4"/></Border>
                                                <Border Grid.Row="1" Grid.Column="4" Style="{StaticResource CellBox}"><TextBlock Text="0,5"/></Border>
                                                <Border Grid.Row="1" Grid.Column="5" Style="{StaticResource CellBox}"><TextBlock Text="0,6"/></Border>
                                                <Border Grid.Row="1" Grid.Column="6" Style="{StaticResource CellBox}"><TextBlock Text="0,8"/></Border>
                                                <Border Grid.Row="1" Grid.Column="7" Style="{StaticResource CellBox}"><TextBlock Text="0,9"/></Border>

                                                <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource CellBox}"><TextBlock Text="0,4"/></Border>
                                                <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource CellBox}"><TextBlock Text="0,5"/></Border>
                                                <Border Grid.Row="2" Grid.Column="3" Style="{StaticResource CellBox}"><TextBlock Text="0,6"/></Border>
                                                <Border Grid.Row="2" Grid.Column="4" Style="{StaticResource CellBox}"><TextBlock Text="0,75"/></Border>
                                                <Border Grid.Row="2" Grid.Column="5" Style="{StaticResource CellBox}"><TextBlock Text="1,0"/></Border>
                                                <Border Grid.Row="2" Grid.Column="6" Style="{StaticResource CellBox}"><TextBlock Text="1,2"/></Border>
                                                <Border Grid.Row="2" Grid.Column="7" Style="{StaticResource CellBox}"><TextBlock Text="1,5"/></Border>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Autoroutier -->
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                            <TextBlock Text="Chaussees a caractere autoroutier" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                            <Grid HorizontalAlignment="Center">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="220"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="60"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource HeaderCellBox}"><TextBlock Text="Materiaux bitumineux"/></Border>
                                                <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T2"/></Border>
                                                <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T1"/></Border>
                                                <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T0"/></Border>
                                                <Border Grid.Row="0" Grid.Column="4" Style="{StaticResource HeaderCellBox}"><TextBlock Text="T5"/></Border>
                                                <Border Grid.Row="0" Grid.Column="5" Style="{StaticResource HeaderCellBox}"><TextBlock Text="TEX"/></Border>

                                                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource HeaderCellBox}"><TextBlock Text="Materiaux traites hydrau. et betons"/></Border>
                                                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource HeaderCellBox}"><TextBlock Text="GNT et sol"/></Border>

                                                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CellBox}"><TextBlock Text="0,5"/></Border>
                                                <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource CellBox}"><TextBlock Text="0,6"/></Border>
                                                <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource CellBox}"><TextBlock Text="0,8"/></Border>
                                                <Border Grid.Row="1" Grid.Column="4" Style="{StaticResource CellBox}"><TextBlock Text="1,0"/></Border>
                                                <Border Grid.Row="1" Grid.Column="5" Style="{StaticResource CellBox}"><TextBlock Text="1,3"/></Border>

                                                <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource CellBox}"><TextBlock Text="0,6"/></Border>
                                                <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource CellBox}"><TextBlock Text="0,7"/></Border>
                                                <Border Grid.Row="2" Grid.Column="3" Style="{StaticResource CellBox}"><TextBlock Text="1,0"/></Border>
                                                <Border Grid.Row="2" Grid.Column="4" Style="{StaticResource CellBox}"><TextBlock Text="-"/></Border>
                                                <Border Grid.Row="2" Grid.Column="5" Style="{StaticResource CellBox}"><TextBlock Text="1,0"/></Border>
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Milieu urbain -->
                            <Border Background="Black" BorderBrush="White" BorderThickness="2" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Chaussees en milieu urbain" FontWeight="SemiBold" FontSize="16" Foreground="White"/>
                                    <Grid HorizontalAlignment="Center" Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="220"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="220"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource HeaderCellBox}"><TextBlock Text=""/></Border>
                                        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource HeaderCellBox}"><TextBlock Text="Voie de desserte"/></Border>
                                        <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource HeaderCellBox}"><TextBlock Text="Voie de distribution"/></Border>
                                        <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource HeaderCellBox}"><TextBlock Text="Voie principale a trafic lourd"/></Border>

                                        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource HeaderCellBox}"><TextBlock Text="Materiaux bitumineux"/></Border>
                                        <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource HeaderCellBox}"><TextBlock Text="Mat. traites liants hydrau. et betons"/></Border>
                                        
                                        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CellBox}"><TextBlock Text="0,1"/></Border>
                                        <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource CellBox}"><TextBlock Text="0,2"/></Border>
                                        <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource CellBox}"><TextBlock Text="0,4"/></Border>

                                        <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource CellBox}"><TextBlock Text="0,1"/></Border>
                                        <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource CellBox}"><TextBlock Text="0,2"/></Border>
                                        <Border Grid.Row="2" Grid.Column="3" Style="{StaticResource CellBox}"><TextBlock Text="0,4"/></Border>
                                    </Grid>

                                    <Border Background="#22FFFFFF" BorderBrush="#66FFFFFF" BorderThickness="1" CornerRadius="4" Padding="8" Margin="0,10,0,0">
                                        <TextBlock Text="Cliquer le cas adequat pour l'appliquer aux couches correspondantes dans la feuille de calcul des valeurs admissibles" 
                                                   FontSize="12" 
                                                   TextWrapping="Wrap" 
                                                   Foreground="White"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource CardBg}" BorderBrush="{StaticResource SecondaryBg}" BorderThickness="0,1,0,0" Padding="20,15">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="??" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Documentation basee sur la norme NF P98-086" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock Text="Pour plus d'informations, consultez la norme francaise" FontSize="10" Opacity="0.7"/>
                    </StackPanel>
                </StackPanel>
                
                <Button HorizontalAlignment="Right" 
                        Content="Fermer" 
                        Style="{StaticResource PrimaryActionButtonStyle}" 
                        Click="Close_Click" 
                        Padding="20,8"/>
            </Grid>
        </Border>
    </Grid>
</Window>