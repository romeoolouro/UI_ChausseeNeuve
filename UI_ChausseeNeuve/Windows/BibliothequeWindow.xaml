<Window x:Class="UI_ChausseeNeuve.Windows.BibliothequeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:UI_ChausseeNeuve.Views"
        Title="Bibliotheque des materiaux"
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource PrimaryBg}">
    <Border Style="{StaticResource SectionCardStyle}" Margin="15">
        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="CancelBtn" Content="Annuler" Width="120" Margin="0,0,10,0" Style="{StaticResource SecondaryActionButtonStyle}" Click="Cancel_Click"/>
                <Button x:Name="OkBtn" Width="180" Style="{StaticResource PrimaryActionButtonStyle}" Click="Ok_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/UI_ChausseeNeuve;component/Resources/Icons/bibliotheque.png" Width="18" Height="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Valider le materiau choisi"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            <views:BibliothequeView x:Name="BibView" ShowActionBar="False"/>
        </DockPanel>
    </Border>
</Window>