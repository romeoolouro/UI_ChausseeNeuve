<Window x:Class="UI_ChausseeNeuve.Windows.ModeSelectionWindow" FontSize="17"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choisissez le mode de dimensionnement souhaité" Height="600" Width="980" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource CardBorder}">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="178*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Choisissez le mode de dimensionnement souhaité" FontSize="34" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,16" Foreground="White"/>
        <Grid Margin="0,61,0,0" Grid.RowSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,8,0" Background="#FF1A1A1A">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Mode expert" FontWeight="Bold" FontSize="24" TextAlignment="Center" Foreground="{DynamicResource TextWhite}" Background="#FF3C3C3C" OpacityMask="#FFEFD9D9" Margin="0,20,0,10"/>
                    <TextBlock Text="Ce mode propose une saisie détaillée, étape par étape. Il convient aux utilisateurs maîtrisant les méthodes normatives et souhaitant un contrôle approfondi." TextWrapping="Wrap" Width="360" Margin="0,20,0,49.4" TextAlignment="Center" Foreground="White" FontSize="20"/>
                    <Button Content="Sélectionner" Width="160" Style="{StaticResource PrimaryButton}" Click="Expert_Click" Background="White" Foreground="#FF030303" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Style="{StaticResource Card}" Margin="8,0,0,0" Background="#FF1A1A1A">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Mode automatique" FontWeight="Bold" FontSize="24" TextAlignment="Center" Foreground="White" Background="#FF3C3C3C" OpacityMask="Black" Margin="0,20,0,10"/>
                    <TextBlock Text="Ce mode assure un calcul rapide basé sur la norme NF P98-086 adaptée aux conditions tropicales, avec saisie minimale." TextWrapping="Wrap" Width="360" Margin="0,20,0,70" TextAlignment="Center" OpacityMask="#FF1A1A1A" Foreground="White" FontSize="20"/>
                    <Button Content="Sélectionner" Width="160" Style="{StaticResource PrimaryButton}" Click="Auto_Click" Foreground="#FF1A1A1A" Background="White" FontWeight="Bold" FontSize="22"/>
                </StackPanel>
            </Border>
        </Grid>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,2,0" Width="180">
            <Button Content="Annuler" Width="160" Style="{StaticResource PrimaryButton}" Click="Cancel_Click" Height="37" FontSize="22" FontWeight="Bold" Background="#FF1A1A1A"/>
        </StackPanel>
    </Grid>
</Window>
