<Window x:Class="UI_ChausseeNeuve.Windows.ModeSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mode de dimensionnement"
        Height="600"
        Width="980"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBg}">

    <Grid>
        <!-- Cancel button in bottom-right corner -->
        <Button Content="Annuler"
                Style="{StaticResource SecondaryActionButtonStyle}"
                Click="Cancel_Click"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                MinWidth="120"/>

        <!-- Main content centered -->
        <Grid HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="Choisissez le mode de dimensionnement souhaité"
                       Style="{StaticResource HeaderText}"
                       Margin="0,0,0,30"
                       HorizontalAlignment="Center"/>

            <!-- Modes Grid -->
            <Grid Grid.Row="1"
                    HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Mode Expert -->
                <Border x:Name="ExpertCard"
                        Grid.Column="0"
                        Style="{StaticResource SectionCardStyle}"
                        Width="380"
                        Height="280"
                        Margin="0,0,15,0"
                        Padding="20"
                        Cursor="Hand"
                        MouseLeftButtonUp="ExpertCard_Click">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Mode expert"
                                   Style="{StaticResource SectionTitleStyle}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"/>

                        <TextBlock Grid.Row="1"
                                   Text="Ce mode propose une saisie détaillée, étape par étape. Il convient aux utilisateurs maîtrisant les méthodes normatives et souhaitant un contrôle approfondi."
                                   Style="{StaticResource InfoTextStyle}"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="10,0"/>

                        <Button x:Name="ExpertSelectButton"
                                Grid.Row="2"
                                Content="Sélectionner"
                                Style="{StaticResource PrimaryActionButtonStyle}"
                                Click="Expert_Click"
                                HorizontalAlignment="Center"
                                MinWidth="160"
                                IsEnabled="False"
                                Margin="0,15,0,0"/>
                    </Grid>
                </Border>

                <!-- Mode Automatique -->
                <Border x:Name="AutoCard"
                        Grid.Column="1"
                        Style="{StaticResource SectionCardStyle}"
                        Width="380"
                        Height="280"
                        Margin="15,0,0,0"
                        Padding="20"
                        Cursor="Hand"
                        MouseLeftButtonUp="AutoCard_Click">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Mode automatique"
                                   Style="{StaticResource SectionTitleStyle}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"/>

                        <TextBlock Grid.Row="1"
                                   Text="Ce mode assure un calcul rapide basé sur la norme NF P98-086 adaptée aux conditions tropicales, avec saisie minimale."
                                   Style="{StaticResource InfoTextStyle}"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="10,0"/>

                        <Button x:Name="AutoSelectButton"
                                Grid.Row="2"
                                Content="Sélectionner"
                                Style="{StaticResource PrimaryActionButtonStyle}"
                                Click="Auto_Click"
                                HorizontalAlignment="Center"
                                MinWidth="160"
                                IsEnabled="False"
                                Margin="0,15,0,0"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>

